<!-- Home Subpage -->
<section class="pt-page" data-id="home">
  <div class="section-inner start-page-content">
    <div class="page-header">
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4">
          <div class="photo">
            <%
              getImageUrl = url => {
                let urlArray = url.split('upload');
                let finalUrl = urlArray[0] + 'upload/w_550,h_550' + urlArray[1];
                return finalUrl;
              };
            %>
            <img src="<%= getImageUrl(profile.img) %>" alt="">
          </div>
        </div>

        <div class="col-sm-8 col-md-8 col-lg-8">
          <div class="title-block">
            <h1><%= profile.full_name %></h1>
            <div class="owl-carousel text-rotation">
              <% profile.skillsAt.forEach(function(goodAt){ %>
                <div class="item">
                  <div class="sp-subtitle"> <%= goodAt %></div>
                </div>
              <% }); %>
            </div>
          </div>

          <div class="social-links">
            <a href="<%= profile.social.github %>" target="_blank">
              <i class="fa fa-github"></i>
            </a>
            <a href="<%= profile.social.linkedin %>" target="_blank">
              <i class="fa fa-linkedin"></i>
            </a>
            <a href="<%= profile.social.twitter %>" target="_blank">
              <i class="fa fa-twitter"></i>
            </a>
            <a href="<%= profile.social.facebook %>" target="_blank">
              <i class="fa fa-facebook"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="page-content">
      <div class="row">

        <div class="col-sm-6 col-md-6 col-lg-6">
          <div class="about-me">
            <div class="block-title">
              <h3>About
                <span>Me</span>
              </h3>
            </div>
            <p><%= profile.bio %></p>
          </div>
          <div class="download-resume">
            <a target="_blank" href="<%= profile.resume_link %>" class="btn btn-secondary">Download Resume</a>
          </div>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-6">
          <ul class="info-list">
            <li>
              <span class="title">Age</span>
              <span class="value"><%= profile.age %></span>
            </li>
            <li>
              <span class="title">Residence</span>
              <span class="value"><%= profile.residence %></span>
            </li>
            <li>
              <span class="title">Address</span>
              <span class="value"><%= profile.address %></span>
            </li>
            <li>
              <span class="title">e-mail</span>
              <span class="value">
                <a href="mailto:<%= profile.email %>"><%= profile.email %></a>
              </span>
            </li>
            <li>
              <span class="title">Phone</span>
              <span class="value"><%= profile.phone[0] %></span>
            </li>
            <li>
              <span class="title">Freelance</span>
              <span class="value available">Available</span>
            </li>
          </ul>
        </div>

      </div>
    </div>
  </div>
</section>
<!-- End of Home Subpage -->
